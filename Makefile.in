# Clean up.

clean:	
	-rm -f *.o *.sum *.log *~ core
	-rm -f *.bb *.bbg *.da *.gcov
	-for d in GNU; do cd $$d && rm -f *.o *~; cd ..; done
	-rm -f $(PROG) das-test dds-test expr-test \
		error-test geturl gse-test unit_tests
	-rm -f $(UNIT_TEST_PROGS)
	-if [ -d doc-html ]; \
	then \
	    cd doc-html; rm -f *.html; cd ..; \
	fi
	-if [ -d dox-latex ]; \
	then \
	    cd doc-latex; rm -f *.tex; cd ..; \
	fi
	-if [ -d tests ]; \
	then \
	    cd tests; $(MAKE) $(MFLAGS) clean; cd ..; \
	fi

